# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET		/login						controllers.Login.login()

GET     /products                   controllers.Products.products()

GET		/signup						controllers.Signup.signup()

GET     /editProducts               controllers.EditProducts.editProducts()
GET     /addToCart              	controllers.CartFunctionality.addToCart()
GET     /removeFromCart             controllers.CartFunctionality.removeFromCart()

POST	/addProduct					controllers.AddProduct.addProduct()